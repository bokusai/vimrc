set encoding=utf-8
set fileencodings=iso-2022-jp,cp932,euc-jp,sjis,utf-8
set fileformats=unix,dos,mac
set fenc=utf-8
set nobackup
set autoread
set hidden
set showcmd

set number
set laststatus=2

set virtualedit=onemore
set smartindent
set showmatch
nnoremap j gj
nnoremap k gk
noremap! <C-?> <C-h>

set wildmode=list:longest


set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>
